<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Admin Panel{% endblock %}</title>

    <!-- Bootstrap + FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Custom Admin CSS -->
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
</head>
<body>

<div class="admin-wrapper d-flex">

    <!-- SIDEBAR -->
    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="sidebar-title">
            <i class="fa fa-cogs"></i> Admin Panel
        </div>

        <ul class="menu">
            <li>
                <a href="{{ path('admin_dashboard') }}"
                   class="{% if app.request.attributes.get('_route') == 'admin_dashboard' %}active{% endif %}">
                    <i class="fa fa-home"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <li>
                <a href="{{ path('admin_user_index') }}"
                   class="{% if app.request.attributes.get('_route') starts with 'admin_user' %}active{% endif %}">
                    <i class="fa fa-users"></i>
                    <span>Users</span>
                </a>
            </li>

            <li>
                <a href="{{ path('admin_subscription_index') }}"
                   class="{% if app.request.attributes.get('_route') starts with 'admin_subscription' %}active{% endif %}">
                    <i class="fa fa-credit-card"></i>
                    <span>Subscriptions</span>
                </a>
            </li>
        </ul>
    </aside>



    <!-- MAIN CONTENT -->
    <main class="main-content flex-grow-1">

        <!-- TOP NAVBAR -->
        <nav class="topbar d-flex justify-content-between align-items-center px-4">
            <div></div>
            <div class="d-flex align-items-center gap-3">
                <span class="fw-bold">Hello, Admin</span>
                <a href="{{ path('app_logout') }}" class="btn btn-sm btn-danger">Logout</a>
            </div>
        </nav>

        <!-- PAGE CONTENT -->
        <div class="content-wrapper p-4">
            {% block body %}{% endblock %}
        </div>

    </main>
</div>

</body>
</html>
